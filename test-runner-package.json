{
  "name": "cobytes-test-runner",
  "version": "1.0.0",
  "description": "Test runner for Cobytes Security Platform",
  "scripts": {
    "test": "jest --config=jest.config.js --runInBand",
    "test:backend": "jest --testPathPattern=backend --runInBand",
    "test:frontend": "jest --testPathPattern=frontend --runInBand",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:e2e": "jest --testPathPattern=e2e --runInBand"
  },
  "dependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.5",
    "axios": "^1.6.5",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "puppeteer": "^21.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "wait-for-expect": "^3.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.2.0",
    "@types/puppeteer": "^7.0.4"
  }
}