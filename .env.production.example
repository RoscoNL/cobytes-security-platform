# Production Environment Variables
# Copy this file to .env and fill in your actual values

NODE_ENV=production
PORT=3001

# Database - DigitalOcean Managed PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# JWT Secrets - Generate secure random strings
JWT_SECRET=your-secure-jwt-secret-here
JWT_REFRESH_SECRET=your-secure-jwt-refresh-secret-here

# Pentest-Tools API
PENTEST_TOOLS_API_KEY=your-api-key-here
PENTEST_TOOLS_API_URL=https://app.pentest-tools.com/api/v2

# CORS Configuration
CORS_ORIGIN=https://securityscan.cobytes.com

# Optional: Skip database connection for testing
# SKIP_DB=true